<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#161a2d"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/plakat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:paddingTop="20dp"
        app:srcCompat="@drawable/poz1" />

    <TextView
        android:id="@+id/tytul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/plakat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="@string/tytul"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/kraj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tytul"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="@string/kraj"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/rok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kraj"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="rok:2018"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/gatunek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rok"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Dramat"
        android:textColor="@color/white" />

</RelativeLayout>